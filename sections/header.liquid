<header>
  <div class="header__top">
    <h2 class="header__title">
      {{ shop.name | link_to: routes.root_url }}
    </h2>

    <div class="header__icons">
      {% if shop.customer_accounts_enabled %}
        {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
      {% endif %}

      <a href="{{ routes.cart_url }}">
        {% if cart.item_count > 0 %}
          <sup>{{ cart.item_count }}</sup>
        {% endif %}

        {{ 'icon-cart.svg' | inline_asset_content }}
      </a>
    </div>
  </div>

  <!-- Standard Menu -->
  <div class="header__menu">
    {% for link in section.settings.menu.links %}
      {{ link.title | link_to: link.url }}
    {% endfor %}
  </div>

  <!-- Mega Menu -->
  {% if section.settings.enable_mega_menu %}
    {% render 'mega-menu',
      products_per_collection: section.settings.products_per_collection,
      background_color: section.settings.mega_menu_background_color,
      border_color: section.settings.mega_menu_border_color,
      link_color: section.settings.mega_menu_link_color,
      link_hover_color: section.settings.mega_menu_link_hover_color,
      link_hover_background: section.settings.mega_menu_link_hover_background,
      accent_color: section.settings.mega_menu_accent_color
    %}
  {% endif %}
</header>

{% stylesheet %}
  header {
    background: #ffffff;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .header__top {
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  
  header svg {
    width: 2rem;
  }
  
  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
  }

{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "header",
      "content": "Mega Menu"
    },
    {
      "type": "checkbox",
      "id": "enable_mega_menu",
      "label": "Enable Mega Menu",
      "default": true,
      "info": "Automatically displays all collections with product previews"
    },
    {
      "type": "range",
      "id": "products_per_collection",
      "min": 3,
      "max": 9,
      "step": 3,
      "default": 3,
      "label": "Products per collection",
      "info": "Number of products to show in each collection dropdown"
    },
    {
      "type": "header",
      "content": "Mega Menu Colors"
    },
    {
      "type": "color",
      "id": "mega_menu_background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "mega_menu_border_color",
      "label": "Border color",
      "default": "#e5e7eb"
    },
    {
      "type": "color",
      "id": "mega_menu_link_color",
      "label": "Link color",
      "default": "#374151"
    },
    {
      "type": "color",
      "id": "mega_menu_link_hover_color",
      "label": "Link hover color",
      "default": "#1f2937"
    },
    {
      "type": "color",
      "id": "mega_menu_link_hover_background",
      "label": "Link hover background",
      "default": "#f9fafb"
    },
    {
      "type": "color",
      "id": "mega_menu_accent_color",
      "label": "Accent color",
      "default": "#3b82f6"
    }
  ]
}
{% endschema %}
