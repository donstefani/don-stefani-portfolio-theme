<div class="full-width">
  <section id="hero" class="relative min-h-[62vh] flex items-center justify-center">
    <!-- Background Image -->
    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" 
         style="background-image: url('{{ 'eveloTech-Shopify-Quickbooks.jpg' | asset_url }}');">
    </div>
    
    <!-- Optional overlay for better text readability -->
    {% if section.settings.show_overlay %}
      <div class="absolute inset-0 bg-black bg-opacity-30"></div>
    {% endif %}
    
    <!-- CTA Box Overlapping Bottom -->
    <div class="absolute bottom-0 left-0 right-0 transform translate-y-1/3 hero-cta-box">
      <div class="max-w-7xl mx-auto px-4 py-8" style="max-width: 1140px;">
        <div class="bg-gradient-to-r from-green-600 to-green-700 rounded-lg p-8 text-white text-center shadow-xl" 
             style="background: linear-gradient(135deg, #4e8f30 0%, #3a6b24 100%);">
          {% if section.settings.heading != blank %}
            <h3 class="text-2xl md:text-3xl font-bold mb-4">{{ section.settings.heading }}</h3>
          {% endif %}
          
          {% if section.settings.description != blank %}
            <p class="text-lg mb-6 text-white">{{ section.settings.description }}</p>
          {% endif %}
          
          {% if section.settings.button_text != blank and section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link }}" 
               class="bg-white text-green-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors duration-300 inline-block"
               style="color: #4e8f30;">
              {{ section.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
</div>

{% stylesheet %}
  .hero-cta-box {
    z-index: 10;
  }
  
  @media (max-width: 768px) {
    .hero-cta-box {
      transform: translateY(0) !important;
      margin-top: -2rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero CTA Section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": false,
      "info": "Adds a dark overlay for better text readability"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "eveloTech is Your E-commerce Support Partner"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "We work alongside growing online stores to untangle backend complexity and keep operations running smoothlyâ€”offering dependable guidance, tailored solutions, and ongoing support as you scale."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Let's Get Started"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero CTA Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
