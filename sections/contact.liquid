<!-- Contact Section -->
<section class="mt-5 pb-32 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4" style="max-width: 1200px;">
        <!-- Page Header -->
        <div class="text-center mb-16 mt-8" style="margin-top: 20px;">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{{ section.settings.heading | default: "Get In Touch" }}</h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                {{ section.settings.description | default: "Ready to transform your Shopify backend? Let's discuss how Don Stefani can help your business scale efficiently." }}
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12">
            <!-- Contact Information -->
            <div class="bg-white rounded-lg shadow-lg p-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h2>
                
                <div class="space-y-6">
                    <!-- Phone -->
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <i class="fas fa-phone text-green-600 text-xl mt-1"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-semibold text-gray-900">Phone</h3>
                            <a href="tel:{{ section.settings.phone | default: '+12089180846' }}" class="text-gray-600 hover:text-green-600 transition-colors duration-300">
                                {{ section.settings.phone | default: "(208) 918-0846" }}
                            </a>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <i class="fas fa-envelope text-green-600 text-xl mt-1"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-semibold text-gray-900">Email</h3>
                            <a href="mailto:{{ section.settings.email | default: 'help@evelotech.com' }}" class="text-gray-600 hover:text-green-600 transition-colors duration-300">
                                {{ section.settings.email | default: "dstefani@donstefani.com" }}
                            </a>
                        </div>
                    </div>

                    <!-- Business Hours -->
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <i class="fas fa-clock text-green-600 text-xl mt-1"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-semibold text-gray-900">Business Hours</h3>
                            <p class="text-gray-600">{{ section.settings.business_hours | default: "Monday - Friday: 9:00 AM - 5:00 PM MST" }}</p>
                        </div>
                    </div>

                    <!-- Response Time -->
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <i class="fas fa-comments text-green-600 text-xl mt-1"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-semibold text-gray-900">Response Time</h3>
                            <p class="text-gray-600">{{ section.settings.response_time | default: "We typically respond within 24 hours during business days." }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Calendly Calendar -->
            <div class="bg-green-600 rounded-lg shadow-lg p-8" id="calendar" style="background-color: #4e8f30;">
                <h2 class="text-2xl font-bold text-white mb-6">Schedule a Consultation</h2>
                <p class="text-white mb-6">
                    {{ section.settings.calendly_description | default: "Book a 30-minute consultation to discuss your ecommerce backend needs and explore how Don Stefani can help your business scale." }}
                </p>
                
                <!-- Calendly inline widget begin -->
                <div class="calendly-inline-widget" data-url="{{ section.settings.calendly_url | default: 'https://calendly.com/don-evelotech-pwpy/30min?hide_event_type_details=1&hide_gdpr_banner=1&background_color=ffffff&primary_color=4e8f30' }}" style="min-width:320px;height:700px;"></div>
                <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
                <!-- Calendly inline widget end -->
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Contact",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Page Heading",
      "default": "Get In Touch"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Page Description",
      "default": "Ready to transform your Shopify backend? Let's discuss how Don Stefani can help your business scale efficiently."
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "(208) 918-0846"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "help@evelotech.com"
    },
    {
      "type": "text",
      "id": "business_hours",
      "label": "Business Hours",
      "default": "Monday - Friday: 9:00 AM - 5:00 PM MST"
    },
    {
      "type": "text",
      "id": "response_time",
      "label": "Response Time",
      "default": "We typically respond within 24 hours during business days."
    },
    {
      "type": "text",
      "id": "calendly_url",
      "label": "Calendly URL",
      "default": "https://calendly.com/don-evelotech-pwpy/30min?hide_event_type_details=1&hide_gdpr_banner=1&background_color=ffffff&primary_color=4e8f30"
    },
    {
      "type": "textarea",
      "id": "calendly_description",
      "label": "Calendly Description",
      "default": "Book a 30-minute consultation to discuss your ecommerce backend needs and explore how Don Stefani can help your business scale."
    }
  ]
}
{% endschema %}
