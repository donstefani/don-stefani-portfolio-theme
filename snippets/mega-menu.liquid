{% comment %}
  Mega Menu Snippet - Collections A-Z
  Parameters:
  - products_per_collection: number of products to show (default: 4)
  - background_color: background color (default: #ffffff)
  - border_color: border color (default: #e5e7eb)
  - link_color: link text color (default: #374151)
  - link_hover_color: link hover text color (default: #1f2937)
  - link_hover_background: link hover background (default: #f9fafb)
  - accent_color: accent color (default: #3b82f6)
{% endcomment %}

{% assign products_per_collection = products_per_collection | default: 3 %}
{% assign background_color = background_color | default: '#ffffff' %}
{% assign border_color = border_color | default: '#e5e7eb' %}
{% assign link_color = link_color | default: '#374151' %}
{% assign link_hover_color = link_hover_color | default: '#1f2937' %}
{% assign link_hover_background = link_hover_background | default: '#f9fafb' %}
{% assign accent_color = accent_color | default: '#3b82f6' %}

{% if products_per_collection > 3 %}
  {% assign products_per_collection = 3 %}
{% endif %}

<div class="mega-menu">
  <nav class="mega-menu-nav">
    <div class="mega-menu-container">
      <ul class="mega-menu-list">
        {% for collection in collections %}
          {% unless collection.handle == 'home' or collection.handle == 'frontpage' %}
            <li class="mega-menu-item">
              <a href="{{ collection.url }}" class="mega-menu-link">
                {{ collection.title }}
              </a>
            
            {% if collection.products.size > 0 %}
              <div class="mega-menu-dropdown">
                <div class="mega-menu-content">
                  <div class="mega-menu-grid">
                    <!-- Featured Products -->
                    <div class="mega-menu-products">
                      <h3 class="mega-menu-section-title">{{ collection.title }}</h3>
                      <div class="mega-menu-product-grid">
                        {% for product in collection.products limit: products_per_collection %}
                          <div class="mega-menu-product">
                            <a href="{{ product.url }}" class="mega-menu-product-link">
                              <div class="mega-menu-product-image">
                                {% if product.featured_image %}
                                  <img 
                                    src="{{ product.featured_image | image_url: width: 120, height: 120, crop: 'center' }}" 
                                    alt="{{ product.title }}"
                                    width="120"
                                    height="120"
                                    loading="lazy"
                                  >
                                {% else %}
                                  <div class="mega-menu-product-placeholder"></div>
                                {% endif %}
                              </div>
                              <div class="mega-menu-product-info">
                                <span class="mega-menu-product-title">{{ product.title }}</span>
                                <span class="mega-menu-product-price">{{ product.price | money }}</span>
                              </div>
                            </a>
                          </div>
                        {% endfor %}
                      </div>
                      <a href="{{ collection.url }}" class="mega-menu-view-all">
                        View all {{ collection.title }}
                      </a>
                    </div>
                    
                    <!-- Collection description -->
                    <div class="mega-menu-description">
                      <h3 class="mega-menu-section-title">Description</h3>
                      <p class="mega-menu-description-text">{{ collection.description | strip_html }}</p>
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}
          </li>
          {% endunless %}
        {% endfor %}
      </ul>
    </div>
  </nav>
</div>

<style>
  .mega-menu {
    background: {{ background_color }};
    border-bottom: 1px solid {{ border_color }};
    position: relative;
    z-index: 100;
  }
  
  .mega-menu-nav {
    width: 100%;
  }
  
  .mega-menu-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .mega-menu-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 0;
    flex-wrap: wrap;
  }
  
  .mega-menu-item {
    position: relative;
  }
  
  .mega-menu-link {
    display: block;
    padding: 1rem 1.5rem;
    color: {{ link_color }};
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.2s ease;
    border-bottom: 2px solid transparent;
  }
  
  .mega-menu-link:hover {
    color: {{ link_hover_color }};
    background: {{ link_hover_background }};
    border-bottom-color: {{ accent_color }};
  }
  
  .mega-menu-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-top: none;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    min-width: 600px;
    max-width: 900px;
  }
  
  .mega-menu-item:hover .mega-menu-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  /* Default: align left */
.mega-menu-item .mega-menu-dropdown {
  left: 0;
  right: auto;
  min-width: 600px;
  max-width: 900px;
}

.mega-menu-item:last-child .mega-menu-dropdown {
  left: auto;
  right: 0;
}

.mega-menu-item:nth-last-child(1) .mega-menu-dropdown {
  left: auto;
  right: 0;
}
  
  .mega-menu-content {
    padding: 2rem;
  }
  
  .mega-menu-grid {
  display: grid;
  grid-template-columns: 1.5fr minmax(0, 1fr);
  gap: 2rem;
}

  
  .mega-menu-section-title {
    font-size: 1rem;
    font-weight: 600;
    color: #1f2937;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .mega-menu-product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-bottom: 1rem;
  }
  
  .mega-menu-product {
    text-align: center;
  }
  
  .mega-menu-product-link {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
  }
  
  .mega-menu-product-link:hover {
    transform: translateY(-2px);
  }
  
  .mega-menu-product-image {
    margin-bottom: 0.5rem;
  }
  
  .mega-menu-product-image img {
    width: 100%;
    height: auto;
    border-radius: 0.375rem;
    border: 1px solid #e5e7eb;
  }
  
  .mega-menu-product-placeholder {
    width: 100%;
    height: 120px;
    background: #f3f4f6;
    border-radius: 0.375rem;
    border: 1px solid #e5e7eb;
  }
  
  .mega-menu-product-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .mega-menu-product-title {
    font-size: 0.75rem;
    font-weight: 500;
    color: #374151;
    line-height: 1.2;
  }
  
  .mega-menu-product-price {
    font-size: 0.75rem;
    color: #6b7280;
    font-weight: 400;
  }
  
  .mega-menu-view-all {
    display: inline-block;
    color: {{ accent_color }};
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .mega-menu-view-all:hover {
    text-decoration: underline;
  }
  
  .mega-menu-description {
  min-width: 0;
  overflow: hidden;
}
  
  .mega-menu-description-text {
  font-size: 0.875rem;
  color: #6b7280;
  line-height: 1.5;
  margin: 0;

  white-space: normal !important;
  word-break: break-word;
  overflow-wrap: anywhere;
  hyphens: auto;

  max-width: 100%;
}

  
  @media (max-width: 768px) {
    .mega-menu-list {
      flex-direction: column;
    }
    
    .mega-menu-link {
      padding: 0.75rem 1rem;
      border-bottom: 1px solid #e5e7eb;
    }
    
    .mega-menu-dropdown {
      position: static;
      box-shadow: none;
      border: none;
      border-top: 1px solid #e5e7eb;
      min-width: auto;
    }
    
    .mega-menu-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .mega-menu-product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
